@model IEnumerable<FoskorSecurityTransport.Models.Reason>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReasonName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ReasonName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ReasonID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ReasonID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ReasonID })
                </td>
            </tr>
        }
    </tbody>

</table>
